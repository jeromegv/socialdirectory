extends shared/layout

block head
	style.
		.imagebackground {
			background: url(/images/boats.jpg) no-repeat center center; 
			-webkit-background-size: cover;
			-moz-background-size: cover;
			-o-background-size: cover;
			background-size: cover;
		}

block content
	.jumbotron.imagebackground
		h1 Explore the up-and-coming social enterprise scene in the Philippines. 
		h2 Social enterprise:  A business committed to doing good while remaining financially sustainable
	.row
		.col-lg-4.col-md-4.col-sm-4.col-xs-12
			.thumbnail.text-center
				a(href='/explore')
					img(src="images/city.jpg",class="img-responsive")
					.blackoverlay
					.middleoverlay
						h3 Explore
						h4 Social Enterprises
		.col-lg-4.col-md-4.col-sm-4.col-xs-12
			.thumbnail.text-center
				a(href='#causes')
					img(src="images/socialworker.jpg",class="img-responsive")
					.blackoverlay
					.middleoverlay
						h3 Connect
						h4 With Causes You Care About
		.col-lg-4.col-md-4.col-sm-4.col-xs-12
			.thumbnail.text-center
				a(href='#engage')
					img(src="images/engage.jpg",class="img-responsive")
					.blackoverlay
					.middleoverlay
						h3 Engage
						h4 With Us
	.title.clearfix
		a(name='causes',class="anchor")
		h1 Social Causes
	.product_c
		.row
			for socialPurpose,index in socialPurposeCategory
				.col-lg-3.col-md-4.col-sm-4.col-xs-12
					.main_box
						.desc_title_front_page
							h5
								a(href="/explore/social/"+convertToSlug(socialPurpose))= socialPurpose
						.box_1
							- var suborg = _.filter(organizations, function(org) { return (_.contains(org.socialPurposeCategoryTags,socialPurpose)) });
							- suborg = _.shuffle(suborg)
							.slick
								for entry,index in suborg
									div
										a(href='/organization/'+entry.name_slug)
											img(data-lazy=fullFileHost+entry.logoThumbnail,alt=entry.name)
										.desc
											p= entry.descriptionService.substring(0,90)
						
		.row
			.col-lg-12.col-md-12.col-sm-12.col-xs-12
				.twitter
					.row
						.col-lg-3.col-md-3.col-sm-4.col-xs-12
							.desc
								h4 Live updates from your social enterprises!
								.desc_text
									p We have created this twitter list that allows you to follow all the social enterprises in Philippines. See what's new and exciting and follow our twitter list!
						.col-lg-9.col-md-9.col-sm-8.col-xs-12
							a(class="twitter-timeline", data-dnt="true", href="https://twitter.com/AIESECcanada/lists/canada-local-committees", data-widget-id="517465416793206784", data-chrome="nofooter") Tweets from the social enterprises we follow
							script !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
