extends ../layout

block content
  .page-header
    h3 Update Organization

  form.form-horizontal(role='form', novalidate="novalidate",id='updateOrganization')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='name') Organization Name
      .col-sm-4
        input.form-control(type='text', name='name', id='name', autofocus=true, placeholder='Type Name of the Organization',required,value=organization.name)
    .form-group
      label(class='col-sm-2 control-label', for='email') Email
      .col-sm-4
        input.form-control.col-sm-8(type='email', name='email', id='email', placeholder='Email',required,value=organization.email)
    .form-group
      label(class='col-sm-2 control-label', for='address') Location
      .col-sm-4
        textarea.form-control(type='text', name='address', rows='3', id='address', placeholder='Type physical address if you have it, if not just city name is OK. To be used to determine location on a map')=organization.Location.address
    .form-group
        label(class='col-sm-2 control-label', for='longitude') Longitude/Latitude
        div(class='col-sm-2')
            input.form-control(type='text', name='longitude', id='longitude',value=organization.Location.longitude)
        div(class='col-sm-2')
            input.form-control(type='text', name='latitude', id='latitude',value=organization.Location.latitude)
    .form-group
      label(class='col-sm-2 control-label', for='phoneNumber') Phone Number
      .col-sm-2
        input.form-control(type='text', name='phoneNumber', id='phoneNumber', placeholder='Phone Number',value=organization.phoneNumber)
    .form-group
      label(class='col-sm-2 control-label', for='website') Website
      .col-sm-4
        input.form-control(type='text', name='website', id='website', placeholder='Website', data-parsley-type="url",value=organization.website)
    .form-group
      label(class='col-sm-2 control-label', for='twitter') Twitter
      .col-sm-4
        input.form-control(type='text', name='twitter', id='twitter', placeholder='Twitter', data-parsley-type="url",value=organization.twitter)
    .form-group
      label(class='col-sm-2 control-label', for='facebook') Facebook
      .col-sm-4
        input.form-control(type='text', name='facebook', id='facebook', placeholder='Facebook Fan page', data-parsley-type="url",value=organization.facebook)
    .form-group
      label(class='col-sm-2 control-label', for='tumblr') Tumblr
      .col-sm-4
        input.form-control(type='text', name='tumblr', id='tumblr', placeholder='Tumblr page', data-parsley-type="url",value=organization.tumblr)
    .form-group
      label(class='col-sm-2 control-label', for='logo') Logo URL
      .col-sm-4
        input.form-control(type='text', name='logo', id='logo', placeholder='URL to their logo', data-parsley-type="url",value=organization.logo)
    .form-group
      label(class='col-sm-2 control-label', for='parentOrganization') Parent Organization
      .col-sm-4
        input.form-control(type='text', name='parentOrganization', id='parentOrganization', placeholder='Parent Organization (Optional)',value=organization.parentOrganization)
    .form-group
      label(class='col-sm-2 control-label', for='yearFounded') Year Founded
      .col-sm-2
        input.form-control(type='text', name='yearFounded', id='yearFounded',placeholder='Year Founded',data-parsley-type="integer",data-parsley-range="[1800,2100]",value=organization.yearFounded)
    .form-group
      label(class='col-sm-2 control-label', for='primaryBusinessSector') Primary Business Sector
      .col-sm-4
        input.form-control(type='text', name='primaryBusinessSector', id='primaryBusinessSector', placeholder='Primary Business Sector',value=organization.primaryBusinessSector)
    .form-group
      label(class='col-sm-2 control-label', for='descriptionService') Product or Service Description
      .col-sm-8
        textarea.form-control(type='text', name='descriptionService', id='descriptionService', rows='3', placeholder='Product or Service Description')=organization.descriptionService
    .form-group
      label(class='col-sm-2 control-label', for='socialPurposeCategory') Social Purpose Category
      .col-sm-4
        input.form-control(type='text', name='socialPurposeCategory', id='socialPurposeCategory', placeholder='Social Purpose Category',value=organization.socialPurposeCategory)
    .form-group
      label(class='col-sm-2 control-label', for='descriptionCause') Social Purpose Description
      .col-sm-8
        textarea.form-control(type='text', name='descriptionCause', id='descriptionCause', rows='3', placeholder='Social Purpose Description')=organization.descriptionCause
    .form-group
      label(class='col-sm-2 control-label', for='organizationalStructure') Organizational Structure
      .col-sm-4
        select.form-control(name='organizationalStructure', id='organizationalStructure')
            if (organization.organizationalStructure=='')
             option(selected hidden value='') Choose an Organizational Structure
            option(value='for profit',selected=(organization.organizationalStructure=="for profit")) For-Profit
            option(value='non profit',selected=(organization.organizationalStructure=="non profit")) Non-Profit
            option(value='cooperative',selected=(organization.organizationalStructure=="cooperative")) Cooperative
            option(value='registered charity',selected=(organization.organizationalStructure=="registered charity")) Registered Charity
    .form-group
      label(class='col-sm-2 control-label', for='privateNote') Private Note
      .col-sm-8
        textarea.form-control(type='text', name='privateNote', id='privateNote', rows='3', placeholder='Private Note that will not be readable on website')=organization.privateNote
    .form-group
      label(class='col-sm-2 control-label', for='resourceName') Additional Resources
      .col-sm-8(id="duplicate")
        if (typeof(organization.additionalResources[0]) != 'undefined')
          for resource,index in organization.additionalResources
            .row
              div(class='col-sm-6')
                input.form-control(type='text', name='resourceName[]', id='resourceName',placeholder='Resource Name (Could be Article Name)',value=resource.resourceName)
              div(class='col-sm-5')
                input.form-control(type='text', name='resourceUrl[]', id='resourceUrl',placeholder='URL',data-parsley-type="url",value=resource.resourceUrl)
              if (index==0)
                div(class='col-sm-1')
                  a(class="btn btn-primary",id="addButton")
                      span(class="ion-plus-round") 
                      |Add
        else
          .row
              div(class='col-sm-6')
                input.form-control(type='text', name='resourceName[]', id='resourceName',placeholder='Resource Name (Could be Article Name)')
              div(class='col-sm-5')
                input.form-control(type='text', name='resourceUrl[]', id='resourceUrl',placeholder='URL',data-parsley-type="url")
              div(class='col-sm-1')
                a(class="btn btn-primary",id="addButton")
                    span(class="ion-plus-round") 
                    |Add 
        
    .form-group
        label(class='col-sm-2 control-label', for='active') Publish it on the website
        div(class='col-sm-8 btn-group',data-toggle='buttons')
            if (organization.active==true)
              label(class='btn btn-primary active')
                input(type='radio',name='active',id='active1',value="true",checked=checked)
                |ON
              label(class='btn btn-primary')
                input(type='radio',name='active',id='active2',value="false")
                |OFF
            else
              label(class='btn btn-primary')
                input(type='radio',name='active',id='active1',value="true")
                |ON
              label(class='btn btn-primary active')
                input(type='radio',name='active',id='active2',value="false",checked=checked)
                |OFF


    .form-group
      .col-sm-offset-2.col-sm-8
        input.btn.btn-primary(type='submit')
