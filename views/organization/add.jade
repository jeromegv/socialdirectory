extends ../layout

block content
  .page-header
    h3 Add New Organization

  form.form-horizontal(role='form', method='POST', novalidate="novalidate",id='addorganization')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='name') Name
      .col-sm-8
        input.form-control(type='text', name='name', id='name', autofocus=true, placeholder='Type Name of the Organization',required)
    .form-group
      label(class='col-sm-2 control-label', for='email') Email
      .col-sm-8
        input.form-control(type='email', name='email', id='email', placeholder='Email',required)
    .form-group
      label(class='col-sm-2 control-label', for='address') Address
      .col-sm-8
        textarea.form-control(type='text', name='address', id='address', rows='4', placeholder='Physical address. To be used to determine location')
    .form-group
      label(class='col-sm-2 control-label', for='phoneNumber') Phone Number
      .col-sm-8
        input.form-control(type='text', name='phoneNumber', id='phoneNumber', placeholder='Phone Number')
    .form-group
      label(class='col-sm-2 control-label', for='website') Website
      .col-sm-8
        input.form-control(type='text', name='website', id='website', placeholder='Website', data-parsley-type="url")
    .form-group
      label(class='col-sm-2 control-label', for='twitter') Twitter
      .col-sm-8
        input.form-control(type='text', name='twitter', id='twitter', placeholder='Twitter', data-parsley-type="url")
    .form-group
      label(class='col-sm-2 control-label', for='facebook') Facebook
      .col-sm-8
        input.form-control(type='text', name='facebook', id='facebook', placeholder='Facebook Fan page', data-parsley-type="url")
    .form-group
      label(class='col-sm-2 control-label', for='logo') Logo URL
      .col-sm-8
        input.form-control(type='text', name='logo', id='logo', placeholder='URL to their logo', data-parsley-type="url")
    .form-group
      label(class='col-sm-2 control-label', for='parentOrganization') Parent Organization
      .col-sm-8
        input.form-control(type='text', name='parentOrganization', id='parentOrganization', placeholder='Parent Organization (Optional)')
    .form-group
      label(class='col-sm-2 control-label', for='yearFounded') Year Founded
      .col-sm-8
        input.form-control(type='text', name='yearFounded', id='yearFounded',placeholder='Year Founded',data-parsley-type="integer")
    .form-group
      label(class='col-sm-2 control-label', for='description') Description
      .col-sm-8
        textarea.form-control(type='text', name='description', id='description', rows='4', placeholder='Overview/Description of the Social Enterprise')
    .form-group
        label(class='col-sm-2 control-label', for='sources') Sources
        div(class='col-sm-3')
            input.form-control(type='text', name='sourceName', id='sourceName',placeholder='Source Name (Could be Article Name)')
        div(class='col-sm-4')
            input.form-control(type='text', name='sourceUrl', id='sourceUrl',placeholder='URL',data-parsley-type="url")
        div(class='col-sm-1')
            a(class="btn btn-primary",id="addbutton")
                span(class="ion-plus-round") 
                |Add
    .form-group
        label(class='col-sm-2 control-label', for='active') Publish it on the website
        div(class='col-sm-8 btn-group',data-toggle='buttons')
            label(class='btn btn-primary active')
                input(type='radio',name='active',id='active1')
                |ON
            label(class='btn btn-primary')
                input(type='radio',name='active',id='active2')
                |OFF

    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          span.ion-plus-round
          | Add Organization